{
  "compilerOptions": {
    "target": "ES2020",
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": [
    "./src/index.tsx",
    "./src/components/*/*.tsx",
    "./src/components/*/*.ts",
    "src/components/Button/index.tsx"
  ],
  "exclude": ["node_modules"]
}
